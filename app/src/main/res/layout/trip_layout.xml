<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_marginTop="@dimen/card_margin"
    android:background="@color/colorWhiteCard"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CustomFont.MyTextViewBlack
            android:id="@+id/mTextView_tripid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left_trip"
            android:textColor="@color/colorTripText"
            android:textSize="@dimen/textsize_trip" />

    </LinearLayout>

</android.support.v7.widget.CardView>